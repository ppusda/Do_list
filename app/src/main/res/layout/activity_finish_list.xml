<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC232323"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_selDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="날짜 선택"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_beforeDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/selector_btn_bf" />
            <Button
                android:id="@+id/btn_selDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="날짜 선택"/>
            <Button
                android:id="@+id/btn_nextDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_next"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#B5B5B5" />

        <ListView
            android:id="@+id/list_finish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:divider="@android:color/background_light"
            android:dividerHeight="0.5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>